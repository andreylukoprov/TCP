<!DOCTYPE html>
<html ng-app="signinapp">
<head lang="en">
    <meta charset="UTF-8">
    <title>Sign in</title>
    <script src="/javascripts/jquery-2.1.3.js"></script>
    <script src="/javascripts/angular/angular.min.js"></script>
    <script src="/javascripts/angular/signinapp.js"></script>
    <script src="/javascripts/angular/services/signinFactory.js"></script>
    <script src="/javascripts/angular/controllers/signinController.js"></script>

    <link rel="stylesheet" href="/css/bootstrap/css/bootstrap.css"/>
    <link rel="stylesheet" href="/css/signin.css"/>

</head>
<body>
<div class="container" ng-controller="signinController">

    <form class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>

        <input type="text" id="inputUserName" class="form-control"  ng-model="user.username" placeholder="User name" required autofocus>

        <input type="password" id="inputPassword" class="form-control"  ng-model="user.password" required placeholder="Password" >
        <button class="btn btn-lg btn-primary btn-block" ng-click="checkUser()">Sign in</button>
    </form>

</div>
</body>
</html>

