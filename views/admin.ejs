<script src="/javascripts/jquery-2.1.3.js"></script>
<script src="/javascripts/jquery-ui-1.11.2.custom/jquery-ui.js"></script>
<script src="/javascripts/angular.min.js"></script>
<script src="/javascripts/UI/Admin.js"></script>
<script src="/javascripts/UI/Category.js"></script>

<link rel="stylesheet" href="/javascripts/bootstrap/css/bootstrap.css"/>
<link rel="stylesheet" href="/javascripts/jquery-ui-1.11.2.custom/jquery-ui.css"/>
<link rel="stylesheet" href="/stylesheets/UI.css"/>
<link rel="stylesheet" href="/stylesheets/ModalStyle.css"/>

<div ng-app="booksApp" ng-controller="booksController">


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <span class="brand">Books Store</span>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav">
                    <div ng-controller="categoryController">
                        <ul class="nav nav-list">
                            <li class="nav-header">Categories</li>
                            <li class="active" onclick="Active(this)" ng-click="SetCategory('All')"><a
                                        href="#All">All</a></li>
                            <li ng-repeat="category in categories" onclick="Active(this)"
                                ng-click="SetCategory(this.category)">
                                <a href="#{{category}}">{{category}}
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div ng-controller='modalController'>
                <modal-dialog show='modalShown'>
                    <input class="span9" type="text" placeholder="Title" class="input-medium" value="{{bookDetail.Title}}" ng-model="book.Title">
                    <input class="span9" type="text" placeholder="Price" class="input-medium" value="{{bookDetail.Price}}"ng-model="book.Price">
                    <input class="span9" type="text" placeholder="Description" class="input-medium" value="{{bookDetail.Description}}" ng-model="book.Description">
                    <input class="span9" type="text" placeholder="Date Of Publication" class="input-medium" value="{{bookDetail.DateOfPublication}}" ng-model="book.DateOfPublication">
                    <input class="span9" type="text" placeholder="Publishing House" class="input-medium" value="{{bookDetail.PublishingHouse}}" ng-model="book.PublishingHouse">
                    <input class="span9" type="text" placeholder="Category" class="input-medium" value="{{bookDetail.Category}}" ng-model="book.Category">
                    <a class="btn" ng-click="openModal(this.book._id)"><i class="icon-edit"></i></a>
                </modal-dialog>
                <div class="span9">
                    <table class="table table-hover table-bordered">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Date Of Publication</th>
                            <th>Publishing House</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="book in books" class="text-overflow">
                            <td>{{$index+1}}</td>
                            <td>{{book.Title}}</td>
                            <td>{{book.Price}}</td>
                            <td>{{book.Description}}</td>
                            <td>{{book.DateOfPublication}}</td>
                            <td>{{book.PublishingHouse}}</td>
                            <td>{{book.Category}}</td>
                            <td><a class="btn" ng-click="openModal(this.book._id)"><i class="icon-edit"></i></a>
                                <a class="btn" ><i class="icon-remove"></i></a></td>
                        </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

