<div>
    <div class="modal-header">
        <h3 class="modal-title">Order info</h3>
    </div>
    <div class="modal-body">
        <div>
            <div class="form-group">
                <label>Customer first name: {{order.customer.firstName}}</label>
            </div>
            <div class="form-group">
                <label>Customer last name: {{order.customer.lastName}}</label>
            </div>
            <div class="form-group">
                <label>Customer phone: {{order.customer.phone}}</label>
            </div>
            <div class="form-group">
                <label>Order status: {{order.status}}</label>
            </div>
        </div>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="book in order.books" class="text-overflow">
                    <td>{{$index+1}}</td>
                    <td>{{book.cartBook.title}}</td>
                    <td>{{book.cartBook.price}}</td>
                    <td>{{book.cartBook.category}}</td>
                    <td>{{book.amount}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
    </div>
</div>