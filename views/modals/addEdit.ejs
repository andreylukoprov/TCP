<div>
    <div class="modal-header">
        <h3 class="modal-title">Edit</h3>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Title:</label>
            <input type="text" ng-model="book.title" class="form-control">
        </div>
        <div class="form-group">
            <label>Description:</label>
            <input type="text" ng-model="book.description" class="form-control">
        </div>
        <div class="form-group">
            <label>Price:</label>
            <input type="text" ng-model="book.price" class="form-control">
        </div>
        <div class="form-group">
            <label>Date Of Publication:</label>
            <input type="text" ng-model="book.dateOfPublication" class="form-control">
        </div>
        <div class="form-group">
            <label>Category:</label>
            <input type="text" ng-model="book.category" class="form-control">
        </div>
        <div class="form-group">
            <label>Publishing House:</label>
            <input type="text" ng-model="book.publishingHouse" class="form-control">
        </div>
        <div class="form-group">
            <label>Author:</label>
            <div class="dropdown ">
               <button class="btn btn-default dropdown-toggle authorDD" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                   <span class="caret"></span>
                    {{authordd.firstName}} {{authordd.lastName}}
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                    <li ng-click="changeAuthor(author)" ng-repeat="author in authors">{{author.firstName}} {{author.lastName}}</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-success" ng-click="save(book)">Save</button>
        <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
    </div>
</div>